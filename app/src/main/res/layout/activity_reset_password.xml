<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_900"
    android:padding="20dp"
    tools:context=".ResetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btnNewPWBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_keyboard_backspace_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Regresar"
                android:textColor="@color/sky_600"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_black"
            android:text="Nueva contraseña"
            android:textColor="@color/slate_200"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_regular"
            android:justificationMode="inter_word"
            android:text="¡Hemos confirmado exitosamente tu identidad! Ingrese abajo tu nueva contraseña."
            android:textColor="@color/slate_400"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtNewPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/input_rounded"
            android:elevation="4dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Ingresa tu nueva contraseña"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:textColor="@color/slate_300"
            android:textColorHint="@color/slate_400"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEmailNewPWError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/red_500" />

        <EditText
            android:id="@+id/txtConfirmPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/input_rounded"
            android:elevation="4dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Vuelve a ingresar tu nueva contraseña"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:textColor="@color/slate_300"
            android:textColorHighlight="@color/slate_400"
            android:textColorHint="@color/slate_400"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvConfirmPWError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/red_500" />

        <Button
            android:id="@+id/btnUpdatePW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/sky_500"
            android:elevation="4dp"
            android:fontFamily="@font/roboto_bold"
            android:padding="10dp"
            android:text="Actualizar contraseña"
            android:textColor="@color/slate_50"
            app:cornerRadius="5dp" />
    </LinearLayout>
</RelativeLayout>