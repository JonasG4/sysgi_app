<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/slate_900"
    tools:context=".EditProfile">
    <LinearLayout
        android:id="@+id/btnAddUser_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Regresar"
            android:textColor="@color/sky_600"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar InformaciÃ³n"
        android:textColor="@color/slate_200"
        android:fontFamily="@font/roboto_bold"
        android:textSize="25sp"
        />
    <TextView
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi Perfil"
        android:textColor="@color/slate_400"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/txtAddUser_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:autofillHints="name"
        android:background="@drawable/input_rounded"
        android:elevation="4dp"
        android:fontFamily="@font/roboto_regular"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textColor="@color/slate_300"
        android:textColorHint="@color/slate_400"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/txtAddUser_Lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:autofillHints="name"
        android:background="@drawable/input_rounded"
        android:elevation="4dp"
        android:fontFamily="@font/roboto_regular"
        android:hint="Apellido"
        android:inputType="textPersonName"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textColor="@color/slate_300"
        android:textColorHint="@color/slate_400"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/txtAddUser_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/input_rounded"
        android:elevation="4dp"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/txt_email_hint"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textColor="@color/slate_300"
        android:textColorHint="@color/slate_400"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnAddUser_Save"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:backgroundTint="@color/sky_600"
        android:elevation="4dp"
        android:paddingVertical="10dp"
        android:textColor="@color/slate_200"
        />
</LinearLayout>