<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/slate_900"
    android:gravity="center_vertical"
    tools:context=".ChangePassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/form_container"
        android:elevation="4dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="25dp">

        <LinearLayout
            android:id="@+id/btnChangePw_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_keyboard_backspace_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Regresar"
                android:textColor="@color/sky_600"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Cambiar contraseña"
            android:textColor="@color/slate_200"
            android:textSize="20sp" />
        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_marginTop="5dp"
            android:background="@color/sky_600" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Escribe tu nueva contraseña"
            android:textColor="@color/slate_400"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtChangePw_CurrentPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="name"
            android:background="@drawable/input_rounded"
            android:elevation="4dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Actual contraseña"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textColor="@color/slate_300"
            android:textColorHint="@color/slate_400"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtChangePw_NewPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/input_rounded"
            android:elevation="4dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Nueva contraseña"
            android:inputType="textPersonName"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textColor="@color/slate_300"
            android:textColorHint="@color/slate_400"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtChangePw_ConfirmPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/input_rounded"
            android:elevation="4dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Confirmar contraseña"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textColor="@color/slate_300"
            android:textColorHint="@color/slate_400"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnChangePw_Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/sky_600"
            android:elevation="4dp"
            android:fontFamily="@font/roboto_bold"
            android:paddingVertical="10dp"
            android:text="Confirmar"
            android:textColor="@color/slate_200" />
    </LinearLayout>
</LinearLayout>